# Strang Backend Configuration
# Copy this file to .env and fill in your API keys

# Required: Google API key for Gemma 2 / Generative Language API
GOOGLE_API_KEY=AIza-xxxxx

# Optional: OpenAI API key for TTS (if using OpenAI TTS)
OPENAI_API_KEY=sk-xxxxx

# Optional: ElevenLabs API key (if using ElevenLabs TTS)
ELEVENLABS_API_KEY=xxxxx

# Mochi model weights path
MOCHI_WEIGHTS_PATH=./weights

# Server settings
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Storage paths
OUTPUT_DIR=./outputs
TEMP_DIR=./temp

# Video settings
MAX_TEXT_LENGTH=3000
DEFAULT_VIDEO_WIDTH=1280
DEFAULT_VIDEO_HEIGHT=720
DEFAULT_FPS=30

# Mochi settings
MOCHI_NUM_INFERENCE_STEPS=64
MOCHI_ENABLED=true
MOCHI_CPU_OFFLOAD=true

# TTS provider: "openai", "elevenlabs", or "none"
TTS_PROVIDER=openai
TTS_VOICE=alloy

# Gemma model name
GEMMA_MODEL=gemma-2-9b-it

# Redis (if using job queue with Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
